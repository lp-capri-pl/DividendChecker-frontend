{
  "compilerOptions": {
    "target": "es6", /* Modern JavaScript supported by browsers */
    "module": "es6", /* Use ES6 modules for browser compatibility */
    "strict": true, /* Enable all strict type-checking options */
    "esModuleInterop": true, /* Enables compatibility with CommonJS modules like axios */
    "moduleResolution": "node", /* Resolves modules in Node.js style */
    "outDir": "./dist", /* Output directory for compiled JavaScript */
    "rootDir": "./src", /* Root directory for TypeScript source files */
    "skipLibCheck": true /* Skip type checking of declaration files */
  },
  "include": [
    "src"
  ]
}