{
  "compilerOptions": {
    "target": "es6", /* Modern JavaScript for browsers */
    "module": "es6", /* ES6 modules for browsers */
    "strict": true, /* Enable strict type-checking */
    "esModuleInterop": true, /* Compatibility with CommonJS modules */
    "moduleResolution": "node", /* Resolve modules like Node.js */
    "outDir": "./dist", /* Output directory for compiled files */
    "rootDir": "./src", /* Root directory for TypeScript source files */
    "skipLibCheck": true /* Skip type-checking declaration files */
  },
  "include": [
    "src"
  ]
}